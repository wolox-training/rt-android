<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/vNewRowImage"
        android:layout_width="@dimen/image_medium_large"
        android:layout_height="@dimen/image_medium_large"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_big"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vNewRowTitle"
        android:layout_width="@dimen/layout_large"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_medium_more"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/font_large"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/vNewRowImage"
        app:layout_constraintTop_toTopOf="@id/vNewRowImage" />

    <TextView
        android:id="@+id/vNewRowDescription"
        android:layout_width="@dimen/spacing_none"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="@dimen/font_medium"
        app:layout_constraintEnd_toEndOf="@id/vNewRowTitle"
        app:layout_constraintStart_toStartOf="@id/vNewRowTitle"
        app:layout_constraintTop_toBottomOf="@id/vNewRowTitle" />

    <TextView
        android:id="@+id/vNewRowCreatedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/vNewRowTitle"
        app:layout_constraintTop_toTopOf="@id/vNewRowTitle" />

    <ImageView
        android:id="@+id/vNewRowLikes"
        android:layout_width="@dimen/image_medium"
        android:layout_height="@dimen/image_medium"
        android:layout_marginTop="@dimen/spacing_large"
        app:layout_constraintBottom_toBottomOf="@id/vNewRowDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/vNewRowTitle"
        app:layout_constraintTop_toTopOf="@id/vNewRowDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>