<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/vNewsDetailBack"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_back"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/vNewsDetailPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post"
        android:layout_marginStart="30dp"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/vNewsDetailBack"
        app:layout_constraintTop_toTopOf="@id/vNewsDetailBack"
        app:layout_constraintBottom_toBottomOf="@id/vNewsDetailBack" />

    <ImageView
        android:id="@+id/vNewsDetailImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/wolox_logo_large" />

    <TextView
        android:id="@+id/vNewsDetailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Ali Connors"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:textColor="@color/wolox_secondary_blue"
        app:layout_constraintTop_toBottomOf="@id/vNewsDetailImage"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/vNewsDetailText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged."
        android:textSize="15sp"
        android:textColor="@color/darkGrey"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="3"
        app:layout_constraintTop_toBottomOf="@id/vNewsDetailTitle"
        app:layout_constraintStart_toStartOf="@id/vNewsDetailTitle" />

    <TextView
        android:id="@+id/vNewsDetailDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15m"
        android:textSize="12dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/vNewsDetailTitle"
        app:layout_constraintBottom_toBottomOf="@id/vNewsDetailTitle"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/vNewsDetailLike"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_like_off_large"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toBottomOf="@id/vNewsDetailText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>